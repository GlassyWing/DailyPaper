<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin_left"
    android:layout_marginEnd="@dimen/card_margin_right"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginTop="@dimen/card_margin_top"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="2dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--图片-->
        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

        <!--标题-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNews"
            android:layout_marginLeft="@dimen/card_title_margin"
            android:layout_marginRight="@dimen/card_title_margin"
            android:layout_marginTop="@dimen/card_title_margin_top"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sn_16sp"
            android:text="Title to Show"
            android:lineSpacingMultiplier="1.5"/>

        <!--摘要-->
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/card_title_margin"
            android:layout_marginRight="@dimen/card_title_margin"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:textSize="@dimen/sn_12sp"
            android:text="desc to show"
            android:lineSpacingMultiplier="1.2"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvDesc"
            android:layout_marginTop="@dimen/card_title_margin"
            android:layout_marginBottom="@dimen/card_title_margin"
            android:layout_marginRight="@dimen/card_title_margin"
            android:layout_marginLeft="@dimen/card_title_margin"
            android:textAlignment="textEnd"
            android:textSize="@dimen/sn_12sp"
            android:lineSpacingMultiplier="1.2"
            android:text="time to show"/>


    </RelativeLayout>




</android.support.v7.widget.CardView>